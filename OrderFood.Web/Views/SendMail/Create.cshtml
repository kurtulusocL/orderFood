@model OrderFood.Entity.Models.SendMail
@{
    ViewBag.Title = "Send A New E-Mail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <a href="~/SendMail/kurtulusocL" class="btn btn-primary">Active Sent E-Mail Pages</a>
                            @if (TempData["message"] != null)
                            {
                                <strong style="color:darkblue">@TempData["message"]</strong>
                            }
                            else
                            {
                                <strong style="color:darkred">@TempData["err"]</strong>
                            }
                            <hr />
                            @ViewBag.Title - <h4 style="color:darkred">Fields marked with * are required</h4>
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                @Html.ValidationSummary()
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Sender E-Mail: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Sender" type="email" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Reciever E-Mail: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Reciever" type="email" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Subject: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Subject" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="ccomment" class="control-label col-lg-2">E-Mail: *</label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control " id="ccomment" name="Text" required></textarea>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-success" type="submit">Send E-Mail</button>
                                            <a href="~/SendMail/kurtulusocL" class="btn btn-warning">Cancel</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>