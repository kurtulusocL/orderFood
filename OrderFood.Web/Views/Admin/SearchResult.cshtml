@using PagedList
@using PagedList.Mvc
@model IPagedList<OrderFood.Data.Identity.ApplicationUser>
@{
    ViewBag.Title = "Your Search Result";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title - <a href="~/Admin/UserList" class="btn btn-primary btn-xs">Confirmed User List</a> - <a href="~/Admin/CompanyList" class="btn btn-success btn-xs">Confirmed Company List</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>User ID</th>
                                    <th>Name Surname</th>
                                    <th>Username</th>
                                    <th>Gender</th>
                                    <th>Birthdate</th>
                                    <th>Province</th>
                                    <th>City</th>
                                    <th>Country</th>
                                    <th>E-Mail Address</th>
                                    <th>Phone Number</th>
                                    <th>Status</th>
                                    <th>Registered Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.NameLastname</td>
                                        <td>@item.UserName</td>
                                        <td>
                                            @if (item.Gender != null)
                                            {
                                                @item.Gender
                                            }
                                            else
                                            {
                                                <span>No information</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Birthdate != null)
                                            {
                                                @item.Birthdate.Value.ToShortDateString()
                                            }
                                            else
                                            {
                                                <span>No information</span>
                                            }
                                        </td>
                                        <td>@item.Province</td>
                                        <td>@item.City</td>
                                        <td>@item.Country</td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>
                                            @if (item.RespondTitle != null)
                                            {
                                                @item.RespondTitle
                                            }
                                            else
                                            {
                                                <span>Personal member</span>
                                            }
                                        </td>
                                        <td>@item.CreatedDate.ToLongDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("SearchResult", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </section>
    </section>
</section>