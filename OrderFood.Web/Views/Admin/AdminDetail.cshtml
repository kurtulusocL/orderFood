@model OrderFood.Data.Identity.ApplicationUser
@{
    ViewBag.Title = "Admin Detail Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  - <a href="~/Admin/AdminList" class="btn btn-primary btn-xs">Active Admin List</a> - @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <a href="~/Admin/Delete/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')"> Delete Admin</a>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Gender</th>
                                    <th>Birthdate</th>
                                    <th>Province</th>
                                    <th>City</th>
                                    <th>Country</th>
                                    <th>Phone Number</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Gender</td>
                                    <td>@Model.Birthdate.Value.ToLongDateString()</td>
                                    <td>@Model.Province</td>
                                    <td>@Model.City</td>
                                    <td>@Model.Country</td>
                                    <td>@Model.PhoneNumber</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>