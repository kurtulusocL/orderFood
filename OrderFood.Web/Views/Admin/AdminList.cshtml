@model IEnumerable<OrderFood.Data.Identity.ApplicationUser>
@{
    ViewBag.Title = "Active Admin List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title - <a href="~/Admin/AllAdminList" class="btn btn-info btn-xs">All Admin List</a> 
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Name Surname</th>
                                    <th>Username</th>
                                    <th>E-Mail Address</th>
                                    <th>Status</th>
                                    <th>Register Date</th>
                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameLastname</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>@item.RespondTitle</td>
                                        <td>@item.CreatedDate.ToLongDateString()</td>
                                        <td>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                                            {
                                                <a href="~/Admin/AdminDetail/@item.Id" class="btn btn-info btn-xs">Detail</a>
                                                <a href="~/Account/ChangeProfile/@item.Id" class="btn btn-success btn-xs">Update</a>
                                                <a href="~/Account/ChangePassword/@item.Id" class="btn btn-primary btn-xs">Change Password</a>
                                                <a href="~/Admin/DeActive/@item.Id" class="btn btn-warning btn-xs">Suspend</a>
                                                <a href="~/Admin/Delete/@item.Id" onclick="return confirm('Are you sure ?')" class="btn btn-danger btn-xs">Delete</a>
                                            }
                                            else
                                            {
                                                <a href="~/Admin/AdminDetail/@item.Id" class="btn btn-info btn-xs">Detail</a>
                                                <a href="~/Account/ChangeProfile/@item.Id" class="btn btn-success btn-xs">Update</a>
                                                <a href="~/Account/ChangePassword/@item.Id" class="btn btn-primary btn-xs">Change Password</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>