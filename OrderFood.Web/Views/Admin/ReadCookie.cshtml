
@{
    ViewBag.Title = "Read to Cookie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title - @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <a href="~/Admin/SetCookie" class="btn btn-info btn-xs">Set To Cookie</a>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Cookie Name</th>
                                    <th>Operation</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@ViewBag.Cerez</td>
                                    <td><a href="~/Admin/DeleteCookie" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')">Delete</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>