                                    Html.RenderAction("_LastOrderList", "Admin");
                                }
                                <hr />
                                <a href="~/Order/kurtulusocL" class="btn btn-primary btn-xs" target="_blank">Look at All</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel-group m-bot20" id="accordion">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseTen">
                                        Membership Cancellation Requests
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseTen" class="panel-collapse collapse">
                                @{
                                    Html.RenderAction("_LastCancelRequestList", "Admin");
                                }
                                <hr />
                                <a href="~/CancelRequest/kurtulusocL" class="btn btn-primary btn-xs" target="_blank">Look at All</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
}
else
{
    @TempData["error"]
}