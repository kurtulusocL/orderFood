@model OrderFood.Entity.Models.Comment
@{
    ViewBag.Title = "Comment Detail Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  - <a href="~/Comment/kurtulusocL" class="btn btn-primary btn-xs">Active Comment List</a>@if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <span> - <a href="~/Comment/Delete/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')"> Delete Comment</a></span>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Name Surname</th>
                                    <th>Comment Text</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.NameSurname</td>
                                    <td>@Model.Text</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>