@model OrderFood.Entity.Models.Ad
@{
    ViewBag.Title = "Ad Detail Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  - <a href="~/Ad/kurtulusocL" class="btn btn-primary btn-xs">Active Ad List</a> 
                            @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <span> - <a href="~/Ad/Delete/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Emin Misiniz ?')"> Delete Ad</a></span>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Company Website</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <a href="@Model.Website" target="_blank" class="btn btn-info">@Model.CompanyName</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>