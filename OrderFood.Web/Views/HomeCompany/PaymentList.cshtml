@model IEnumerable<OrderFood.Entity.Models.Payment>
@{
    ViewBag.Title = "Lista De Métodos De Pago";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="dashboard-influence">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h3 class="mb-2">@ViewBag.Title </h3>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="~/HomeCompany/Index" class="breadcrumb-link">Inicio</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                @foreach (var item in Model)
                {
                    <div class="card influencer-profile-data">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-12">
                                    <div class="text-center">
                                        <img src="~/img/payment/@item.Photo" style="max-height:130px;max-width:130px;min-height:130px;min-width:130px" alt="@item.Photo" title="@item.Name" class="rounded-circle user-avatar-xxl">
                                    </div>
                                </div>
                                <div class="col-xl-10 col-lg-8 col-md-8 col-sm-8 col-12">
                                    <div class="user-avatar-info">
                                        <div class="m-b-20">
                                            <div class="user-avatar-name">
                                                <h2 class="mb-1">@item.Name</h2>
                                            </div>                                            
                                        </div>
                                        <div class="user-avatar-address">
                                            <p class="border-bottom pb-3">
                                                <span class="mb-2 ml-xl-4 d-xl-inline-block d-block">desde @item.CreatedDate.ToShortDateString() </span>
                                                <span class="d-xl-inline-block d-block mb-2"><i class="fa fa-map-marker-alt mr-2 text-primary "></i>@item.Orders.Count() orden total</span>
                                            </p>
                                            <div class="mt-3">
                                                <a href="~/HomeCompany/PaymentMostOrder" class="badge badge-light mr-1">Más Preferido</a>
                                                <a href="~/HomeCompany/PaymentLessOrder" class="badge badge-light mr-1">Menos Preferido</a> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                        
                    </div>
                }
            </div>
        </div>
    </div>
</div>