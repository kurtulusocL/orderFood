@model IEnumerable<OrderFood.Entity.Models.Company>
@{
    ViewBag.Title = "Sus Compañías Esperan Aprobación";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/HomeCompany/Index" class="breadcrumb-link">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="~/HomeCompany/UserProfile" class="breadcrumb-link">Perfil de la Compañía</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">@ViewBag.Title</h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Logo</th>
                                    <th>Nombre</th>
                                    <th>Eslogan del Producto</th>
                                    <th>País/Ciudad</th>
                                    <th>Tipo</th>
                                    <th>Fecha de Registro</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img src="~/img/logo/@item.Logo" title="@item.Title" alt="@item.Logo" style="max-height:90px;max-width:80px;min-height:90px;min-width:80px" class="img-responsive" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.Title</td>
                                        <td>
                                            <span>País: @item.Country.Name</span><br />
                                            <span>Ciudad: @item.City.Name</span>
                                        </td>
                                        <td>@item.Kind.Name</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Logo</th>
                                    <th>Nombre</th>
                                    <th>Eslogan del Producto</th>
                                    <th>País/Ciudad</th>
                                    <th>Tipo</th>
                                    <th>Fecha de Registro</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>