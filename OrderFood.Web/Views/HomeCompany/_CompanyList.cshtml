@model IEnumerable<OrderFood.Entity.Models.Company>
@{
    Layout = null;
}

<div class="card">
    <div class="campaign-table table-responsive">
        <table class="table">
            <thead>
                <tr class="border-0">
                    <th class="border-0">Logo de Compañía</th>
                    <th class="border-0">Nombre de Compañía</th>
                    <th class="border-0">Eslogan de Compañía</th>
                    <th class="border-0">Etkileşim</th>
                    <th class="border-0">Interacción</th>
                    <th class="border-0">Tipo de Compañía</th>
                    <th class="border-0">Ciudad/País</th>
                    <th class="border-0">Producto</th>
                    <th class="border-0">Orden</th>
                    <th class="border-0">Comentario</th>
                    <th class="border-0">Fecha de Registro</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/logo/@item.Logo" title="@item.Name" alt="@item.Logo" style="max-height:90px;max-width:80px;min-height:90px;min-width:80px">
                        </td>
                        <td>@item.Name </td>
                        <td>@item.Title</td>
                        <td>@item.Hit.Value.ToString()</td>
                        <td>@item.Like.Value.ToString()</td>
                        <td>@item.Kind.Name</td>
                        <td>
                            <span>Ciudad: @item.City.Name</span><br />
                            <span>País: @item.Country.Name</span>
                        </td>
                        <td>
                            <a href="~/HomeCompany/CompanyProductList/@item.Id" class="btn btn-primary btn-xs">@item.Products.Count() producto</a>
                        </td>
                        <td>@item.Orders.Count()</td>
                        <td>@item.Comments.Count()</td>
                        <td>@item.CreatedDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>