@model IEnumerable<OrderFood.Entity.Models.City>
@{
    ViewBag.Title = "Lista De Ciudades";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="dashboard-influence">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h3 class="mb-2">@ViewBag.Title </h3>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="~/HomeCompany/Index" class="breadcrumb-link">Inicio</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                @foreach (var item in Model)
                {
                    <div class="card influencer-profile-data">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-12">
                                    <div class="text-center">
                                        <img src="~/img/cityyy.jpg" style="max-height:130px;max-width:130px;min-height:130px;min-width:130px" alt="img" title="@item.Name" class="rounded-circle user-avatar-xxl">
                                    </div>
                                </div>
                                <div class="col-xl-10 col-lg-8 col-md-8 col-sm-8 col-12">
                                    <div class="user-avatar-info">
                                        <div class="m-b-20">
                                            <div class="user-avatar-name">
                                                <h2 class="mb-1">@item.Name</h2>
                                            </div>
                                            <div class="rating-star  d-inline-block">
                                                @if (item.CountryId != null)
                                                {
                                                    <a href="~/HomeCompany/CityCountryList/@item.CountryId" class="btn btn-info btn-xs">@item.Country.Name</a>
                                                }
                                            </div>
                                        </div>
                                        <div class="user-avatar-address">
                                            <p class="border-bottom pb-3">
                                                <span class="mb-2 ml-xl-4 d-xl-inline-block d-block">desde @item.CreatedDate.ToShortDateString() </span>
                                                <span class="d-xl-inline-block d-block mb-2"><i class="fa fa-map-marker-alt mr-2 text-primary "></i>@item.Companies.Count() compañía</span>
                                                <span class="d-xl-inline-block d-block mb-2"><i class="fa fa-map-marker-alt mr-2 text-primary "></i>@item.Products.Count() producto</span>
                                            </p>
                                            <div class="mt-3">
                                                <a href="~/HomeCompany/RivalMostExpensiveProduct/@item.Id" class="badge badge-light mr-1">Los Más Caro</a>
                                                <a href="~/HomeCompany/RivalMostCheaperProduct/@item.Id" class="badge badge-light mr-1">Los Más Barato</a>
                                                <a href="~/HomeCompany/RivalMostLikedProduct/@item.Id" class="badge badge-light">Los Más Gustados</a>
                                                <a href="~/HomeCompany/RivalLittleLikedProduct/@item.Id" class="badge badge-light mr-1">Menos Gustó</a>
                                                <a href="~/HomeCompany/RivalMostOrderProduct/@item.Id" class="badge badge-light mr-1">Más Vendidos</a>
                                                <a href="~/HomeCompany/RivalLessOrderProduct/@item.Id" class="badge badge-light">Menos Vendidos</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="border-top user-social-box">
                            <div class="user-social-media d-xl-inline-block">
                                <a href="~/HomeCompany/RivalMostExpensiveMoreSell/@item.Id" class="badge badge-light mr-1">Más Caro/Más Vendido</a>
                                <a href="~/HomeCompany/RivalMostCheapLesSell/@item.Id" class="badge badge-light mr-1">Barato/Menos Vendido</a>
                                <a href="~/HomeCompany/RivalMostLikedMoreSell/@item.Id" class="badge badge-light mr-1">Más Gusta/Más Ventas</a>
                                <a href="~/HomeCompany/RivalMostLikedLessSell/@item.Id" class="badge badge-light mr-1">Más Gusta/Menos Ventas</a>
                                <a href="~/HomeCompany/RivalLessLikedMoreSell/@item.Id" class="badge badge-light mr-1">Menos Gusta/Ventas Más Altas</a>
                                <a href="~/HomeCompany/RivalLessLikedLessSell/@item.Id" class="badge badge-light mr-1">Menos Gusta/Menos Ventas</a>
                                <a href="~/HomeCompany/RivalLessHitLessSell/@item.Id" class="badge badge-light mr-1">Mínima Interacción/Mínimas Ventas</a>
                                <a href="~/HomeCompany/RivalLessHitMoreSell/@item.Id" class="badge badge-light mr-1">Interacción Mínima/Ventas Más Altas</a>
                                <a href="~/HomeCompany/RivalMoreHitLessSell/@item.Id" class="badge badge-light mr-1">Mayor Compromiso/Menos Ventas</a>
                                <a href="~/HomeCompany/RivalMoreHitMoreSell/@item.Id" class="badge badge-light mr-1">Mayor Compromiso/Mayores Ventas</a>
                            </div>                            
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>