@using PagedList
@using PagedList.Mvc
@model IPagedList<OrderFood.Entity.Models.ProductDetail>
@{
    ViewBag.Title = "Lista Detallada De Sus Productos";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/HomeCompany/Index" class="breadcrumb-link">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="~/HomeCompany/UserProfile" class="breadcrumb-link">Perfil de la Compañía</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                    @ViewBag.Title
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Advertencias de Productos</th>
                                    <th>Descripción del Producto</th>
                                    <th>Contenido</th>
                                    <th>Recomendaciones de Productos</th>
                                    <th>Tiempo de Servicio</th>
                                    <th>Plazo de Entrega del Pedido</th>
                                    <th>Fecha Actualizada</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Warning != null)
                                            {
                                                @item.Warning
                                            }
                                            else
                                            {
                                                <strong style="color:darkred">No se ingresó información.</strong>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Detail != null)
                                            {
                                                @item.Detail
                                            }
                                            else
                                            {
                                                <strong style="color:darkred">No se ingresó información.</strong>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Articles != null)
                                            {
                                                @item.Articles
                                            }
                                            else
                                            {
                                                <strong style="color:darkred">No se ingresó información.</strong>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Offers != null)
                                            {
                                                @item.Offers
                                            }
                                            else
                                            {
                                                <strong style="color:darkred">No se ingresó información.</strong>
                                            }
                                        </td>
                                        <td>@item.ShopServiceTime</td>
                                        <td>@item.OrderTime</td>
                                        <td>
                                            @if (item.UpdatedDate != null)
                                            {
                                                @item.UpdatedDate.Value.ToShortDateString()
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Advertencias de Productos</th>
                                    <th>Descripción del Producto</th>
                                    <th>Contenido</th>
                                    <th>Recomendaciones de Productos</th>
                                    <th>Tiempo de Servicio</th>
                                    <th>Plazo de Entrega del Pedido</th>
                                    <th>Fecha Actualizada</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("YourProductDetailList", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </div>
    </div>
</div>