@model IEnumerable<OrderFood.Entity.Models.Product>
@{
    ViewBag.Title = "Productos Más Vendidos De La Competencia En El País Seleccionado";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/HomeCompany/Index" class="breadcrumb-link">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="~/HomeCompany/UserProfile" class="breadcrumb-link">Perfil de la Compañía</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">@ViewBag.Title</h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Eslogan del Producto</th>
                                    <th>Orden</th>
                                    <th>Precio Descontado</th>
                                    <th>Categoría</th>
                                    <th>Tipo</th>
                                    <th>Compañía</th>
                                    <th>Fecha de Registro</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Title</td>
                                        <td>@item.Orders.Count()</td>
                                        <td>
                                            @if (item.DicsountPrice != null && item.DicsountPrice != Convert.ToDecimal(0.00))
                                            {
                                                @item.DicsountPrice.Value.ToString()
                                            }
                                            else
                                            {
                                                <span>Sin descuento</span>
                                            }
                                        </td>
                                        <td>@item.Category.Name</td>
                                        <td>@item.Subcategory.Name</td>
                                        <td>
                                            @if (item.CompanyId != null)
                                            {
                                                <strong>@item.Company.Name</strong>
                                            }
                                        </td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Eslogan del Producto</th>
                                    <th>Orden</th>
                                    <th>Precio Descontado</th>
                                    <th>Categoría</th>
                                    <th>Tipo</th>
                                    <th>Compañía</th>
                                    <th>Fecha de Registro</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
