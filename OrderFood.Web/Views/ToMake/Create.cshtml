@model OrderFood.Entity.Models.ToMake
@{
    ViewBag.Title = "Create A New Task";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <a href="~/ToMake/kurtulusocL" class="btn btn-primary btn-xs">Active Task List</a>
                            @if (TempData["message"] != null)
                            {
                                <strong style="color:darkblue">@TempData["message"]</strong>
                            }
                            else
                            {
                                <strong style="color:darkred">@TempData["err"]</strong>
                            }
                            <hr />
                            @ViewBag.Title - <h4 style="color:darkred">Fields marked with * are required</h4>
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                @Html.ValidationSummary()
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" action="">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Task Title: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Title" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Task Detail: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Desc" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Name Surname: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="NameSurname" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Last Date: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="TillWhen" type="date" required />
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-success" type="submit">Add New Task</button>
                                            <a href="~/ToMake/kurtulusocL" class="btn btn-warning">Cancel</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>