@model OrderFood.Entity.Models.Company
@{
    ViewBag.Title = "Add Your Company";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Content/temp/Admin/js/jquery-1.8.3.min.js"></script>
<script src="~/Scripts/web/selectcountry.js"></script>

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <a href="~/AdminCreate/CompanyList" class="btn btn-primary btn-xs">Company List</a>
                            @if (TempData["message"] != null)
                            {
                                <strong style="color:darkblue">@TempData["message"]</strong>
                            }
                            else
                            {
                                <strong style="color:darkred">@TempData["err"]</strong>
                            }
                            <hr />
                            @ViewBag.Title - <h4 style="color:darkred">Fields marked with * are required</h4>
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                @Html.ValidationSummary()
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" enctype="multipart/form-data" action="">
                                    @Html.AntiForgeryToken()
                                    <h4 style="color:darkblue">Choose Company Location and Kind</h4>
                                    <hr />
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Country List: *</label>
                                        <div class="col-lg-10">
                                            <select class="form-control m-bot15" name="CountryId" id="country">
                                                <option>--- Choose a country ---</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">City List: *</label>
                                        <div class="col-lg-10">
                                            <select class="form-control m-bot15" name="CityId" id="city" disabled>
                                                <option>--- First Choose a country ---</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Kind List: *</label>
                                        <div class="col-lg-10">
                                            <select class="form-control m-bot15" name="KindId">
                                                <option>--- Choose a company kind ---</option>
                                                @foreach (var item in ViewBag.Kinds)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                    <hr />
                                    <h4 style="color:darkblue">Company Information Process</h4>
                                    <hr />
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Company Name: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Name" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Slogan/Title: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Title" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Detail: *</label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control " id="ccomment" name="Detail" required=""></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Company Description:</label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control " id="ccomment" name="Subdetail"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="username" class="control-label col-lg-2">Company Logo: *</label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="username" name="image" type="file" required />
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-success" type="submit">Add Company Information</button>
                                            <a href="~/AdminCreate/CompanyList" class="btn btn-warning">Cancel</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>