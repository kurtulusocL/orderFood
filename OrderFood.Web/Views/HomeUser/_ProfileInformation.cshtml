@model OrderFood.Data.Identity.ApplicationUser
@{
    Layout = null;
}

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card influencer-profile-data">
        <div class="card-body">
            <div class="row">
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-12">
                    <div class="text-center">
                        <img src="~/img/user.jpg" alt="user photo" class="rounded-circle user-avatar-xxl">
                    </div>
                </div>
                <div class="col-xl-10 col-lg-8 col-md-8 col-sm-8 col-12">
                    <div class="user-avatar-info">
                        <div class="m-b-20">
                            <div class="user-avatar-name">
                                <h2 class="mb-1">@Model.NameLastname</h2>
                            </div>
                            <div class="rating-star  d-inline-block">
                                <p class="d-inline-block text-dark">Con usuario @Model.UserName</p>
                            </div>
                        </div>
                        <div class="user-avatar-address">
                            <p class="border-bottom pb-3">
                                <span class="d-xl-inline-block d-block mb-2"><i class="fa fa-map-marker-alt mr-2 text-primary "></i>@Model.Province, @Model.City, @Model.Country</span>
                                <span class="mb-2 ml-xl-4 d-xl-inline-block d-block">Fecha de Ingreso: @Model.CreatedDate.ToShortDateString()  </span>
                                <span class=" mb-2 d-xl-inline-block d-block ml-xl-4">
                                    @Model.Gender
                                </span>
                                @if (Model.Birthdate != null)
                                {
                                    <span class=" mb-2 d-xl-inline-block d-block ml-xl-4">Cumpleaños: @Model.Birthdate.Value.ToShortDateString() </span>
                                }
                                else
                                {
                                    <span style="color:darkblue" class=" mb-2 d-xl-inline-block d-block ml-xl-4">Fecha de nacimiento no ingresada </span>
                                }
                            </p>
                            <div class="mt-3">
                                <a href="#" class="badge badge-light mr-1">@Model.Email</a>
                                <a href="#" class="badge badge-light mr-1">@Model.PhoneNumber</a>
                            </div>
                            <div class="mt-3">
                                <a href="~/HomeUser/SendCancelRequest/@Model.Id" class="badge badge-light mr-1">Cancelación de Membresía</a>
                                <a href="~/UserAccount/ChangeProfile/@Model.Id" class="badge badge-light mr-1">Actualizar Información</a>
                                <a href="~/UserAccount/ChangePassword/@Model.Id" class="badge badge-light mr-1">Actualice Contraseña</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>