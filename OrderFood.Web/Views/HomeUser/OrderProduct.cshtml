@using PagedList
@using PagedList.Mvc
@using OrderFood.Web.Models
@model IPagedList<OrderFood.Entity.Models.Order>
@{
    ViewBag.Title = "Todos Sus Pedidos de Comida";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/HomeUser/Index" class="breadcrumb-link">Inicio</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">@ViewBag.Title</h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Nombre del Producto</th>
                                    <th>Empresa</th>
                                    <th>Descuento</th>
                                    <th>Cantidad</th>
                                    <th>Precio</th>
                                    <th>Precio Total</th>
                                    <th>Fecha</th>
                                    <th>Dirección</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.ProductId != null)
                                            {
                                                @item.Product.Name
                                            }
                                        </td>
                                        <td>
                                            @if (item.CompanyId != null)
                                            {
                                                @item.Company.Name
                                            }
                                        </td>
                                        <td>
                                            @if (item.ProductId != null)
                                            {
                                                @item.Product.DicsountPrice.Value.ToString()
                                            }
                                            else
                                            {
                                                <span>0</span>
                                            }
                                        </td>
                                        <td>@item.Piece</td>
                                        <td>
                                            @if (item.ProductId != null)
                                            {
                                                if (item.Product.DicsountPrice != null && item.Product.DicsountPrice != Convert.ToDecimal(0.00))
                                                {
                                                    @item.Product.DicsountPrice.Value.ToString()
                                                }
                                                else
                                                {
                                                    @item.Product.SellingPrice.ToString()
                                                }
                                            }
                                        </td>
                                        <td>@item.TotalPrice.ToString()</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>@Html.Raw(HttpUtility.HtmlDecode(More.SafeSubstring(item.Address, 25)))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Nombre del Producto</th>
                                    <th>Empresa</th>
                                    <th>Descuento</th>
                                    <th>Cantidad</th>
                                    <th>Precio</th>
                                    <th>Precio Total</th>
                                    <th>Fecha</th>
                                    <th>Dirección</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="pagination" align="center">
                        <div class="pagination-large">
                            @Html.PagedListPager(Model, Page => Url.Action("OrderProduct", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>