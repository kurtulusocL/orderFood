@model OrderFood.Entity.Models.Product
@{
    ViewBag.Title = "Página De Comprobación De Detalles Del Producto";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/HomeCompany/Index" class="breadcrumb-link">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="~/HomeCompany/UserProfile" class="breadcrumb-link">Perfil de la Compañía</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">@ViewBag.Title - <a href="~/CompanyCreate/ProductList" class="btn btn-primary btn-xs">Lista de Productos</a> - <a href="~/CompanyCreate/DeleteProduct/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('E¿Estás seguro ?')"> Eliminar</a></h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Producto No.</th>
                                    <th>Título del Producto</th>
                                    <th>Descripción Breve del Producto</th>
                                    <th>Fecha Actualizada</th>
                                    <th>Proceso de Control</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.ProductNo</td>
                                    <td>@Model.Title</td>
                                    <td>
                                        @if (Model.Desc != null)
                                        {
                                            @Model.Desc
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No se ingresó información.</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.UpdatedDate != null)
                                        {
                                            @Model.UpdatedDate.Value.ToShortDateString()
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.IsConfirmed == true)
                                        {
                                            <a href="~/CompanyCreate/DeActiveProductDetail/@Model.Id" class="btn btn-warning btn-xs">Suspender</a>
                                        }
                                        else
                                        {
                                            <a href="~/CompanyCreate/ActiveProductDetail/@Model.Id" class="btn btn-success btn-xs">Publicar</a>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Producto No.</th>
                                    <th>Título del Producto</th>
                                    <th>Descripción Breve del Producto</th>
                                    <th>Fecha Actualizada</th>
                                    <th>Proceso de Control</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>