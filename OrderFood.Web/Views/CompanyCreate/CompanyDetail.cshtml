@model OrderFood.Entity.Models.Company
@{
    ViewBag.Title = "Información Detallada De Su Compañía";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/HomeCompany/Index" class="breadcrumb-link">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="~/HomeCompany/UserProfile" class="breadcrumb-link">Perfil de la Compañía</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">@ViewBag.Title - <a href="~/CompanyCreate/CompanyList" class="btn btn-primary btn-xs">Lista de Compañía</a></h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Título de la Compañía</th>
                                    <th>Detalle de la Compañía</th>
                                    <th>Detalle Secundario</th>
                                    <th>Datos de Contacto</th>
                                    <th>Redes sociales</th>
                                    <th>Fecha Actualizada</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Title</td>
                                    <td>@Model.Detail</td>
                                    <td>
                                        @if (Model.Subdetail != null)
                                        {
                                            @Model.Subdetail
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No Se Ingresó Información</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.CompanyContacts.Count() > 0)
                                        {
                                            @Model.CompanyContacts.Count()
                                        }
                                        else
                                        {
                                            <span>0</span>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.CompanySocialMedias.Count() > 0)
                                        {
                                            @Model.CompanySocialMedias.Count()
                                        }
                                        else
                                        {
                                            <span>0</span>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.UpdatedDate != null)
                                        {
                                            @Model.UpdatedDate.Value.ToShortDateString()
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Título de la Compañía</th>
                                    <th>Detalle de la Compañía</th>
                                    <th>Detalle Secundario</th>
                                    <th>Datos de Contacto</th>
                                    <th>Redes sociales</th>
                                    <th>Fecha Actualizada</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>