@model OrderFood.Entity.Models.Product
@{
    ViewBag.Title = "Información Detallada Del Producto";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/HomeCompany/Index" class="breadcrumb-link">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="~/HomeCompany/UserProfile" class="breadcrumb-link">Perfil de la Compañía</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">@ViewBag.Title - <a href="~/CompanyCreate/kurtulusocL" class="btn btn-primary btn-xs">Lista de Productos</a> - <a href="~/CompanyCreate/DeleteProductDetail/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('¿Estás seguro ?')"> Eliminar</a></h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Advertencias de Productos</th>
                                    <th>Descripción del Producto</th>
                                    <th>Contenido</th>
                                    <th>Recomendaciones de Productos</th>
                                    <th>Tiempo de Servicio</th>
                                    <th>Plazo de Entrega del Pedido</th>
                                    <th>Fecha Actualizada</th>
                                    <th>Actas</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @if (Model.ProductDetail.Warning != null)
                                        {
                                            @Model.ProductDetail.Warning
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No se ingresó información.</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.ProductDetail.Detail != null)
                                        {
                                            @Model.ProductDetail.Detail
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No se ingresó información.</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.ProductDetail.Articles != null)
                                        {
                                            @Model.ProductDetail.Articles
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No se ingresó información.</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.ProductDetail.Offers != null)
                                        {
                                            @Model.ProductDetail.Offers
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No se ingresó información.</strong>
                                        }
                                    </td>
                                    <td>@Model.ProductDetail.ShopServiceTime</td>
                                    <td>@Model.ProductDetail.OrderTime</td>
                                    <td>
                                        @if (Model.UpdatedDate != null)
                                        {
                                            @Model.UpdatedDate.Value.ToShortDateString()
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.ProductDetail.IsConfirmed == true)
                                        {
                                            <a href="~/Product/DeActiveDetail/@Model.Id" class="btn btn-warning btn-xs">Suspender</a>
                                        }
                                        else
                                        {
                                            <a href="~/Product/ActiveDetail/@Model.Id" class="btn btn-success btn-xs">Publicar</a>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>AdvertenciaS de Productos</th>
                                    <th>Descripción del Producto</th>
                                    <th>Contenido</th>
                                    <th>Recomendaciones de Productos</th>
                                    <th>Tiempo de Servicio</th>
                                    <th>Plazo de Entrega del Pedido</th>
                                    <th>Fecha Actualizada</th>
                                    <th>Actas</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>