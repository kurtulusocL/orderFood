@model OrderFood.Entity.Models.Audit
@{
    ViewBag.Title = "Log Datas Detail Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  - <a href="~/Log/kurtulusocL" class="btn btn-primary btn-xs">User Log List</a> - @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <a href="~/Log/Delete/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')"> Delete Log Data</a>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Access URL</th>
                                    <th>Language</th>
                                    <th>Browser Version</th>
                                    <th>Platform</th>
                                    <th>Access Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @if (Model.AreaAccessed == "/")
                                        {
                                            <span>Homepage</span>
                                        }
                                        else
                                        {
                                            <span>@Model.AreaAccessed</span>
                                        }
                                    </td>
                                    <td>@Model.Language</td>
                                    <td>@Model.BrowserVersion</td>
                                    <td>@Model.Platform</td>
                                    <td>@Model.Timestamp.ToLongDateString()</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>