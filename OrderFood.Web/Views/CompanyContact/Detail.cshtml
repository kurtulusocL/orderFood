@model OrderFood.Entity.Models.CompanyContact
@{
    ViewBag.Title = "Contact Address Deteil Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  - <a href="~/CompanyContact/kurtulusocL" class="btn btn-primary btn-xs">Active Contact Address List</a> - <a href="~/CompanyContact/Delete/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')"> Delete Contact Address</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Company Address</th>
                                    <th>Phone No 2</th>
                                    <th>Update Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Address</td>
                                    <td>
                                        @if (Model.PhoneNumber2 != null)
                                        {
                                            @Model.PhoneNumber2
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No information typed</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.UpdatedDate != null)
                                        {
                                            @Model.UpdatedDate.Value.ToShortDateString()
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>