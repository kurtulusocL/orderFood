@using PagedList
@using PagedList.Mvc
@model IPagedList<OrderFood.Entity.Models.CompanyContact>
@{
    ViewBag.Title = "Active Contact Address List by Company";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title - <a href="~/CompanyContact/kurtulusocL" class="btn btn-primary btn-xs">Active Contact Address List</a> - <a href="~/CompanyContact/ContactList" class="btn btn-info btn-xs">Contact Address List</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Location</th>
                                    <th>E-Mail Address</th>
                                    <th>Company Name</th>
                                    <th>Phone No 1</th>
                                    <th>City/Country</th>
                                    <th>Add Date</th>
                                    <th>Operations</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <iframe src="@item.Location" frameborder="0" allowtransparency="false" style="max-height:100px;max-width:160px;min-height:100px;min-width:160px"></iframe>
                                        </td>
                                        <td>@item.EMail</td>
                                        <td>
                                            @if (item.CompanyId != null)
                                            {
                                                <strong style="color:darkblue">@item.Company.Name</strong>
                                            }
                                        </td>
                                        <td>@item.PhoneNumber1</td>
                                        <td>
                                            @if (item.CompanyId != null)
                                            {
                                                <strong>City: @item.Company.City.Name</strong><br />
                                                <strong>Country: @item.Company.Country.Name</strong>
                                            }
                                        </td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            <a href="~/CompanyContact/Detail/@item.Id" class="btn btn-info btn-xs">Detail</a>
                                            <a href="~/CompanyContact/Delete/@item.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("Company", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </section>
    </section>
</section>