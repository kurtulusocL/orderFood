@model OrderFood.Entity.CompanyModels.Login
@{
    Layout = null;
    ViewBag.Title = "Por Favor Iniciar Sesión";
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/img/Logo 3.png" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/temp/userpage/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/Content/temp/userpage/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/temp/userpage/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/Content/temp/userpage/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
                <a href="~/Home/Index"><img class="logo-img" src="~/img/Logo 3.png" alt="logo"></a>
                @if (TempData["msg"] != null)
                {
                    <span class="splash-description"> @TempData["msg"]</span>
                }
                @if (TempData["confirm"] != null)
                {
                    <span class="splash-description">@TempData["confirm"]</span>
                }
                @if (TempData["msg"] == null && TempData["confirm"] == null)
                {
                    <span class="splash-description">@ViewBag.Title</span>
                }
            </div>
            <div class="card-body">
                <form method="post" name="" action="">
                    @using (Html.BeginForm("Login", "CompanyAccount", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input class="form-control form-control-lg" name="Username" id="username" type="text" placeholder="Usuario" autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-lg" name="Password" id="password" type="password" placeholder="Contraseña" required>
                        </div>
                        <div class="form-group">
                            <label class="custom-control custom-checkbox">
                                <input class="custom-control-input" name="RememberMe" type="checkbox"><span class="custom-control-label">Recuérdame</span>
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Iniciar Sesión</button>
                    }
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    Si Aún No Es Miembro => <a href="~/CompanyAccount/Register" class="footer-link">Crear Cuenta</a>
                </div>
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="~/CompanyAccount/ForgotPassword" class="footer-link">Olvidé Mi Contraseña</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/temp/userpage/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Content/temp/userpage/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>
</html>