@model OrderFood.Entity.Models.Product
@{
    ViewBag.Title = "Product Detail Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  - <a href="~/Product/kurtulusocL" class="btn btn-primary btn-xs">Active Product List</a> - @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <a href="~/Product/DeleteDetail/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')">Delete Product Info</a>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Product Warning</th>
                                    <th>Product Detail</th>
                                    <th>Contents</th>
                                    <th>Product Suggestion</th>
                                    <th>Servis Time</th>
                                    <th>Deliery Time</th>
                                    <th>Update Date</th>
                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @if (Model.ProductDetail.Warning != null)
                                        {
                                            @Model.ProductDetail.Warning
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No information typed.</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.ProductDetail.Detail != null)
                                        {
                                            @Model.ProductDetail.Detail
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No information typed.</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.ProductDetail.Articles != null)
                                        {
                                            @Model.ProductDetail.Articles
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No information typed.</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.ProductDetail.Offers != null)
                                        {
                                            @Model.ProductDetail.Offers
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No information typed.</strong>
                                        }
                                    </td>
                                    <td>@Model.ProductDetail.ShopServiceTime</td>
                                    <td>@Model.ProductDetail.OrderTime</td>
                                    <td>
                                        @if (Model.UpdatedDate != null)
                                        {
                                            @Model.UpdatedDate.Value.ToShortDateString()
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.ProductDetail.IsConfirmed == true)
                                        {
                                            <a href="~/Product/DeActiveDetail/@Model.Id" class="btn btn-warning btn-xs">Suspend</a>
                                        }
                                        else
                                        {
                                            <a href="~/Product/ActiveDetail/@Model.Id" class="btn btn-success btn-xs">Publish</a>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>