@model OrderFood.Entity.Models.Product
@{
    ViewBag.Title = "Product Information Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  - <a href="~/Product/kurtulusocL" class="btn btn-primary btn-xs">Active Product List</a> - @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <a href="~/Product/Delete/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')"> Delete Product</a>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Product No</th>
                                    <th>Product Title</th>
                                    <th>Description</th>
                                    <th>Update Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.ProductNo</td>
                                    <td>@Model.Title</td>
                                    <td>
                                        @if (Model.Desc != null)
                                        {
                                            @Model.Desc
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No information typed.</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.UpdatedDate != null)
                                        {
                                            @Model.UpdatedDate.Value.ToShortDateString()
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>