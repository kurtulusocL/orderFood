@model OrderFood.Entity.Models.Comment
@{
    Layout = null;
}

@if (TempData["message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["message"]");
            };
    </script>
}
@if (TempData["err"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["err"]");
            };
    </script>
}

@using (Html.BeginForm("_CreateComment", "Product", FormMethod.Post))
{
    <form name="" action="" method="post" class="aa-review-form">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="name">Asunto del Comentario *</label>
            <input type="text" class="form-control" name="Subject" placeholder="Asunto del Comentario" required/>
        </div>
        <div class="form-group">
            <label for="message">Tu Comentario *</label>
            <textarea class="form-control" name="Text" rows="3" placeholder="Tu Comentario" required></textarea>
        </div>
        <div class="form-group">
            <label for="name">Nombre-Apellido *</label>
            <input type="text" class="form-control" name="NameSurname" placeholder="Nombre-Apellido" required />
        </div>
        <div class="form-group">
            <label for="email">Correo Electronico *</label>
            <input type="email" class="form-control" name="EMail" placeholder="Correo Electronico" required />
        </div>
        <div class="g-recaptcha" data-sitekey="6LelQDMaAAAAAHec6nJWHIEx8tLmrMa2d9SIwj0S"></div>
        <button type="submit" class="btn btn-default aa-review-submit" onclick="return confirm('Gracias por tu comentario. Su comentario será procesado.')">¡Comentario!</button>
    </form>
}