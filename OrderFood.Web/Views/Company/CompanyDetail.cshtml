@model OrderFood.Entity.Models.Company
@{
    ViewBag.Title = "Company Detail Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title - <a href="~/Company/kurtulusocL" class="btn btn-primary btn-xs">Active Company List</a> @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <span>- <a href="~/Company/Delete/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Emin Misiniz ?')"> Delete Company</a></span>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Slogan/Title</th>
                                    <th>Company Detail</th>
                                    <th>Description</th>
                                    <th>Contact Address</th>
                                    <th>Social Media</th>
                                    <th>Update Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Title</td>
                                    <td>@Model.Detail</td>
                                    <td>
                                        @if (Model.Subdetail != null)
                                        {
                                            @Model.Subdetail
                                        }
                                        else
                                        {
                                            <strong style="color:darkred">No information typed</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.CompanyContacts.Count() > 0)
                                        {
                                            @Model.CompanyContacts.Count()
                                        }
                                        else
                                        {
                                            <span>0</span>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.CompanySocialMedias.Count() > 0)
                                        {
                                            @Model.CompanySocialMedias.Count()
                                        }
                                        else
                                        {
                                            <span>0</span>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.UpdatedDate != null)
                                        {
                                            @Model.UpdatedDate.Value.ToShortDateString()
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>