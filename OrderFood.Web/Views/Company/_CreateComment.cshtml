@model OrderFood.Entity.Models.Comment
@{
    Layout = null;
}

@if (TempData["message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["message"]");
            };
    </script>
}
@if (TempData["err"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["err"]");
            };
    </script>
}

@using (Html.BeginForm("_CreateComment", "Company", FormMethod.Post))
{
    <form action="" name="" method="post" class="aa-review-form">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="name">Sujeto Comentario *</label>
            <input type="text" class="form-control" id="name" name="Subject" placeholder="sujeto de comentario" required>
        </div>
        <div class="form-group">
            <label for="message">Tu Comentario *</label>
            <textarea class="form-control" name="Text" rows="3" id="message" placeholder="puedes escribir tu comentario en este campo" required></textarea>
        </div>
        <div class="form-group">
            <label for="name">Nombre-Apellido *</label>
            <input type="text" class="form-control" id="name" name="NameSurname" placeholder="nombre-apellido" required>
        </div>
        <div class="form-group">
            <label for="email">Correo Electrónico *</label>
            <input type="email" class="form-control" id="email" name="EMail" placeholder="dirección de correo electrónico" required>
        </div>
        <div class="g-recaptcha" data-sitekey="6LelQDMaAAAAAHec6nJWHIEx8tLmrMa2d9SIwj0S"></div>
        <button type="submit" class="btn btn-default aa-review-submit" onclick="return confirm('Gracias por tu comentario. Su comentario será procesado.')">Comentario</button>
    </form>
}