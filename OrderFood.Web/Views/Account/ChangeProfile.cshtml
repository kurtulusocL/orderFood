@model OrderFood.Entity.AdminModels.ChangeProfile
@{
    ViewBag.Title = "Profili Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <a href="~/Admin/Index" class="btn btn-primary btn-xs">Admin Homepage</a>
                            <hr />
                            @ViewBag.Title - <h4 style="color:darkred">Fields marked with * are required</h4>
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                @Html.ValidationSummary()
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" action="">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Name Surname: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="NameSurname" value="@Model.NameSurname" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Birthdate: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Birthdate" value="@Model.Birthdate" type="date" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Respond Title: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="RespondTitle" value="@Model.RespondTitle" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Your Country: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Country" value="@Model.Country" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Your Province: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Province" value="@Model.Province" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Your City: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="City" value="@Model.City" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Phone Number: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="PhoneNumber" value="@Model.PhoneNumber" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">E-Mail Address: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Email" value="@Model.Email" type="email" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Update Date: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="UpdatedDate" value="" type="date" required />
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-success" type="submit">Update Profile</button>
                                            <a href="~/Admin/Index" class="btn btn-warning">Cancel</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div class="row">
                <span style="color:darkred">@ViewBag.Message</span>
            </div>
        </section>
    </section>
</section>