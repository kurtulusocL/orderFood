@model OrderFood.Entity.Models.VideoAd
@{
    ViewBag.Title = "Video Ad Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  - <a href="~/VideoAd/kurtulusocL" class="btn btn-primary btn-xs">ACtive Video Ad List</a> - @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <a href="~/VideoAd/Delete/@Model.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')">Delete Video Ad</a>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            }
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Ad Text</th>
                                    <th>Company Website</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @if (Model.Title != null)
                                        {
                                            @Model.Title
                                        }
                                        else
                                        {
                                            <strong>No text typed</strong>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Model.Website" target="_blank" class="btn btn-info">@Model.CompanyName</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>