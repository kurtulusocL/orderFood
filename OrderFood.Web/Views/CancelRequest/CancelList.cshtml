@using PagedList
@using PagedList.Mvc
@model IPagedList<OrderFood.Entity.Models.CancelRequest>
@{
    ViewBag.Title = "Membership Cancellation Requests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title - <a href="~/CancelRequest/kurtulusocL" class="btn btn-info btn-xs">Active Cancellation Request List</a> - <a href="~/Admin/UserSetting" class="btn btn-primary btn-xs" target="_blank">User Operation List</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Name Surname</th>
                                    <th>Request Reason</th>
                                    <th>Cancel Date</th>
                                    <th>Request Owner</th>
                                    <th>Add Date</th>
                                    <th>Operations</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Subject</td>
                                        <td>@item.When.ToShortDateString()</td>
                                        <td>
                                            @if (item.CompanyId != null)
                                            {
                                                <a href="~/CancelRequest/Company/@item.CompanyId" class="btn btn-link">
                                                    Company Request: <strong style="color:darkblue">@item.Company.Name</strong>
                                                </a>
                                            }
                                            else
                                            {
                                                <strong style="color:darkblue">User Request</strong>
                                            }
                                        </td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                                            {
                                                <a href="~/CancelRequest/Detail/@item.Id" class="btn btn-info btn-xs">Detail</a>
                                                if (item.IsConfirmed == true)
                                                {
                                                    <a href="~/CancelRequest/DeActive/@item.Id" class="btn btn-warning btn-xs">Suspend</a>
                                                }
                                                else
                                                {
                                                    <a href="~/CancelRequest/Active/@item.Id" class="btn btn-success btn-xs">Publish</a>
                                                }
                                                <a href="~/CancelRequest/Delete/@item.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')">Delete</a>
                                            }
                                            else
                                            {
                                                <a href="~/CancelRequest/Detail/@item.Id" class="btn btn-info btn-xs">Detail</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("CancelList", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </section>
    </section>
</section>