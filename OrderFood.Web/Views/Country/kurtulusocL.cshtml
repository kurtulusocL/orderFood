@using PagedList
@using PagedList.Mvc
@model IPagedList<OrderFood.Entity.Models.Country>
@{
    ViewBag.Title = "Active Country List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                            {
                                <span>- <a href="~/Country/Create" class="btn btn-primary btn-xs">Add A New Country</a></span>
                            }
                            else
                            {
                                <span>you have no authority.</span>
                            } - <a href="~/Country/CountryList" class="btn btn-info btn-xs">Country List</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th width="80">Country Flag</th>
                                    <th>Country Name</th>
                                    <th>Product</th>
                                    <th>City</th>
                                    <th>Company</th>
                                    <th>Add Date</th>
                                    <th>Update Date</th>
                                    <th>Operations</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="80"><img src="~/img/country/@item.Photo" class="img-responsive" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.Products.Count()</td>
                                        <td>@item.Cities.Count()</td>
                                        <td>@item.Companies.Count()</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            @if (item.UpdatedDate != null)
                                            {
                                                @item.UpdatedDate.Value.ToShortDateString()
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Asistant"))
                                            {
                                                <a href="~/Country/Edit/@item.Id" class="btn btn-success btn-xs">Update</a>
                                                <a href="~/Country/DeActive/@item.Id" class="btn btn-warning btn-xs">Suspend</a>
                                                <a href="~/Country/Delete/@item.Id" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')">Delete</a>
                                            }
                                            else
                                            {
                                                <span>you have no authority.</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("kurtulusocL", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </section>
    </section>
</section>