@model OrderFood.Entity.UserModels.ChangeProfile
@{
    ViewBag.Title = "Puede actualizar la información de su perfil.";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                @if (TempData["msg"] != null)
                {
                    <h2 class="pageheader-title">@TempData["msg"]</h2>
                }
                @if (TempData["msg"] == null)
                {
                    <h2 class="pageheader-title">@ViewBag.Title </h2>
                }
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/HomeUser/Index" class="breadcrumb-link">Inicio</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header" style="color:darkred">
                    Campos marcados con * son obligatorios
                </h5>
                <div class="card-body">
                    @Html.ValidationSummary()
                    <form id="validationform" method="post" data-parsley-validate="" novalidate="">
                        @Html.AntiForgeryToken()
                        <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Fecha de Nacimiento: *</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input type="date" required="" name="Birthdate" value="@Model.Birthdate" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Estado/Territorio Donde Vive: *</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input type="text" required="" name="Province" value="@Model.Province" placeholder="Estado/Territorio Donde Vive" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Ciudad En La Que Vives: *</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input type="text" required="" name="City" value="@Model.City" placeholder="Ciudad En La Que Vives" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">País de Residencia: *</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input type="text" required="" name="Country" value="@Model.Country" placeholder="País de Residencia" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Número de Teléfono: *</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input type="text" required="" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="úmero de Teléfono" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Fecha Actualizada: *</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input type="date" required="" name="UpdatedDate" class="form-control">
                            </div>
                        </div>
                        <hr />
                        <div class="form-group row text-right">
                            <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                                <button type="submit" class="btn btn-space btn-primary">Actualiza Tu Informacion</button>
                                <a href="~/HomeUser/Index" class="btn btn-space btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>